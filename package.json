{
  "name": "fontara",
  "displayName": "Font ARA",
  "version": "3.9.0",
  "description": "Font ARA Font Changer (Cross browser Extension)",
  "private": true,
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:web": "vite",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "vite build",
    "clear": "rimraf extension/dist extension/manifest.json extension.*",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "lint": "eslint 'src/**/*.{json,ts,js,vue}'"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.23",
    "@types/webextension-polyfill": "^0.8.3",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vitejs/plugin-vue": "^2.2.4",
    "@vue/compiler-sfc": "^3.2.31",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.12.0",
    "esno": "^0.14.1",
    "fs-extra": "^10.0.1",
    "npm-run-all": "^4.1.5",
    "picocolors": "^1.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3",
    "vite": "^2.8.6",
    "vue": "^3.2.31",
    "vue-i18n": "^9.1.9",
    "web-ext": "^6.8.0",
    "webextension-polyfill": "^0.9.0"
  }
}
